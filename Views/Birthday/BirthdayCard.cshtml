@model Message

<div class="container text-center p-5">
    <h1 class="display-4">Sign the Birthday Card!</h1>
    <div class="bg-dark p-5 text-left border-radius">
    <form action="/birthdaycard/@ViewBag.CurrentEvent.EventId/post" method="post">
        <div class='form-group'>
            <label asp-for="Creator">Your Name</label>
            <input class="form-control" asp-for="Creator" placeholder= "Enter your name.">
            <span asp-validation-for="Creator" class="text-danger"></span>
        </div> 
        <div class='form-group'>
            <label asp-for="Note">Birthday Message</label>
            <textarea class="form-control" asp-for="Note" rows="3" placeholder="Enter a birthday message, funny story, or a good memory!"></textarea>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div> 
        <button type="submit" class="btn btn-light">Post Message</button>
    </form>
    </div>
    <div class="row mt-4">
        @foreach (var item in @ViewBag.Messages)
        {
        <div class="col-sm-6">
            <div class="card m-2" style="width: 100%;">
                <div class="card-body bg-secondary">
                    <p class="card-text lead">@item.Note</p>
                    <span style="font-family: cursive;"><h5 class="text-center">~ @item.Creator</h5></span>
                </div>
            </div>
        </div>
        }
    </div>
</div>